# Staging Environment Configuration
NODE_ENV=staging
PORT=3000
CLIENT_PORT=3001

# Database Configuration
DB_HOST=staging-db.example.com
DB_PORT=5432
DB_NAME=neutral_app_staging
DB_USER=staging_user
DB_PASSWORD=staging_password

# Authentication Configuration
NEXTAUTH_URL=https://staging.neutralapp.com
NEXTAUTH_SECRET=staging-secret-key-change-in-production
AUTH_SECRET=staging-auth-secret

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_HOT_RELOAD=false
ENABLE_SOURCE_MAPS=false

# API Configuration
API_BASE_URL=https://staging.neutralapp.com/api
CORS_ORIGIN=https://staging.neutralapp.com

# Plugin Configuration
PLUGIN_DIRECTORY=/app/plugins
ENABLE_PLUGIN_HOT_RELOAD=false

# Security Configuration
ENABLE_HTTPS=true
SECURE_COOKIES=true
SESSION_SECRET=staging-session-secret

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECKS=true

# Testing Configuration
ENABLE_TEST_MODE=false

# Deployment Verification Configuration
VERIFICATION_ENABLED=true
AUTO_ROLLBACK_ENABLED=true
VERIFICATION_TIMEOUT=30
VERIFICATION_RETRIES=2
ROLLBACK_MAX_ATTEMPTS=3
ROLLBACK_THRESHOLD=0.8 